{
  "name": "workspace-manager-for-chrome",
  "version": "0.0.1",
  "description": "a good starting point for using webpack to build stuffs",
  "author": "tomzhu1024",
  "license": "MIT",
  "repository": "https://github.com/tomzhu1024/webpack-boilerplate",
  "private": true,
  "scripts": {
    "prepare": "npx husky install",
    "start": "npx cross-env NODE_ENV=development TS_NODE_PROJECT=build/tsconfig.json npx ts-node build/scripts/start.ts",
    "build": "npx cross-env NODE_ENV=production TS_NODE_PROJECT=build/tsconfig.json npx ts-node build/scripts/build.ts",
    "type-check": "npx tsc --noEmit",
    "lint": "npm run eslint && npm run stylelint",
    "lint-fix": "npm run eslint-fix && npm run stylelint-fix",
    "eslint": "npx eslint ./**/*.{js,jsx,ts,tsx}",
    "eslint-fix": "npx eslint --fix ./**/*.{js,jsx,ts,tsx}",
    "stylelint": "npx stylelint ./**/*.{css,sass,scss,less}",
    "stylelint-fix": "npx stylelint --fix ./**/*.{css,sass,scss,less}",
    "prettier-check": "npx prettier --check ./**/*.{js,jsx,ts,tsx}",
    "prettier-write": "npx prettier --write ./**/*.{js,jsx,ts,tsx}"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/eslint-parser": "^7.14.7",
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@commitlint/cli": "^12.1.4",
    "@hot-loader/react-dom": "^17.0.1",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "@soda/friendly-errors-webpack-plugin": "^1.8.0",
    "@types/chrome": "^0.0.147",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jquery": "^3.5.6",
    "@types/lodash": "^4.14.171",
    "@types/node": "^16.3.2",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/react-helmet": "^6.1.2",
    "@types/react-router-dom": "^5.1.8",
    "@types/uuid": "^8.3.1",
    "@types/webpack-dev-middleware": "^5.0.1",
    "@types/webpack-dev-server": "^3.11.5",
