    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "commitlint-config-gitmoji": "^2.2.5",
    "copy-webpack-plugin": "^9.0.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "css-loader": "^6.0.0",
    "css-minimizer-webpack-plugin": "^3.0.2",
    "dayjs": "^1.10.6",
    "eslint": "^7.30.0",
